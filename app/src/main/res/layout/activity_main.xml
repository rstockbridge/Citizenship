<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp" >

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="32sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_practice_length"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_view_1" />

    <Button
        android:id="@+id/short_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/short_length"
        android:layout_below="@id/text_view_2" />

    <Button
        android:id="@+id/med_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/med_length"
        android:layout_below="@id/short_button" />

    <Button
        android:id="@+id/long_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/full_length"
        android:layout_below="@id/med_button" />

    <Button
        android:id="@+id/favorites_practice_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:layout_below="@id/long_button" />

    <Button
        android:id="@+id/manage_favorites_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_favorites"
        android:layout_below="@id/favorites_practice_button" />

</RelativeLayout>